{% extends 'base.html.twig' %}

{% block title %}Hello CityController!{% endblock %}

{% block main %}
    <table class="table">
        <thead class="sticky-top">
        <tr>
            <th scope="col" class="txtTh txtThNbor neonText">Campus</th>
            <th scope="col" class="txtTh neonText">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <th id="nameHang" scope="row">{{ place.name }}</th>
                <td>{{ place.street}}</td>
                <td>{{ place.latitude}}</td>
                <td>{{ place.longitude}}</td>
                <td>
                    <a href="{{ path('app_home')}}" title="hangout  details">Modifier</a>
                    <a href="{{ path('app_place_delete', {'id': place.id}) }}" title="hangout  details">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            {{ form_start(form) }}
            <th id="nameHang" scope="row">{{ form_row(form.name) }}</th>
            <td>{{ form_row(form.street) }}</td>
            <td>{{ form_row(form.latitude) }}</td>
            <td>{{ form_row(form.longitude) }}</td>
            <td><button type="submit">Ajouter</button> </td>
            {{ form_end(form) }}

        </tr>
        </tbody>
    </table>
{% endblock %}
